                  <%= employee.display_duration_entree_last_saturday %><br>                  
                  <%= employee.display_duration_entree_last_sunday %><br>                 
                  <strong><%= employee.display_duration_entree_last_week %></strong>
                  </li>
                </ul>
              </div>
            </div>

          <% else %>

          <% end %>
         
        <% end %>
    </div>

    <div class="col-md-6 col-xs-6">
