<% if user_signed_in? %>
<%= Date.today.strftime("%A %d/%m/%Y") %>
  <% @users.each do |user| %>
    <%= user.name %>
    <%= user.first_name %>
      <% user.attendances.where(:content => "entree", :created_at => (Date.today.beginning_of_day..Date.today.end_of_day)).each do |attendance| %>
        <%= attendance.created_at.strftime("%H:%M") %>
        <%= attendance.content %>
        <% end %>
      <% user.attendances.where(content: "sortie").each do |attendance| %>
        <%= attendance.created_at.strftime("%H:%M") %>
        <%= attendance.content %>
        <% end %><br>

  <% end %>

  blabla

<% else %>

  <% @users.each do |user| %>
    <% unless user.attendances.last && Time.now - user.attendances.last.created_at < 1.minute %>
      <%= link_to user.first_name, user_path(user), class: "btn btn-lg btn-primary" %>
    <% else %>
      
      <button type="button" class="btn btn-default btn-lg" disabled="disabled">
        <%= user.first_name %>
      </button>
    <% end %>
  <% end %>

<% end %>